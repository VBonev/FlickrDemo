<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/tweet_card_margin"
    android:minHeight="@dimen/tweet_height"
    card_view:cardBackgroundColor="@color/tweet_card_background"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/tweet_avatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp" />

        <TextView
            android:id="@+id/tweet_screen_name"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_toEndOf="@+id/tweet_avatar"
            android:layout_toRightOf="@+id/tweet_avatar"
            android:linksClickable="true"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tweet_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweet_screen_name"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/tweet_avatar"
            android:layout_toRightOf="@+id/tweet_avatar"
            android:gravity="center_vertical"
            android:textColor="@color/tweet_user_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tweet_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweet_user_name"
            android:layout_marginBottom="10dp"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tweet_date_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tweet_text"
            android:textColor="@color/tweet_date_text" />

    </RelativeLayout>
</android.support.v7.widget.CardView>